---
layout: base
---

<div class="post  row">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    <p class="post-meta">
    <time class="post-meta__date" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
    {% if page.author %} • {{ page.author }}{% endif %}{% if page.meta %} • {{ page.meta }}{% endif %}</p>
  </header>

  <article class="post-content">
    {{ content | safe }}
  </article>

</div>
